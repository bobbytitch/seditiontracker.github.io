{
  "license": "UNLICENSED",
  "scripts": {
    "docker:build": "docker build . -t seditiontrack:latest",
    "docker:pull": "docker pull seditiontrack:latest",
    "docker:shell": "docker run -v=$PWD/docs:/site -it seditiontrack:latest /bin/bash",
    "preview": "docker run -v=$PWD/docs:/site -p 4000:4000 -it seditiontrack:latest",
    "suspect": "node -r ts-node/register commands/suspect.ts"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@types/node": "^14.14.20",
    "commander": "^6.2.1",
    "husky": "^4.2.5",
    "inquirer": "^7.0.1",
    "lodash": "^4.17.19",
    "ts-loader": "^6.2.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn suspect preview"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "arrowParens": "avoid",
    "trailingComma": "none"
  }
}
